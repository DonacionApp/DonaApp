            <p class="greeting">Hola {{user}},</p>

            {{#if status}}
            <div class="status-banner">
                <div class="label">Estado Actual</div>
                <div class="status">{{status}}</div>
            </div>
            {{/if}}
            
            <div class="message-box">{{message}}</div>

            {{#if showTimeline}}
